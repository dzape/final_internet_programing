
@model IEnumerable<Sports.Models.Players>

@{
    ViewData["Title"] = "BySportId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BySportId</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Players players in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(players.FullName, "Details", "Players", new { id = players.PlayerId }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => players.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => players.Contry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => players.SportId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@players.PlayerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@players.PlayerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@players.PlayerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>