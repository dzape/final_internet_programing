@model IEnumerable<Sports.Models.Sport>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SportName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SportId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SportId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SportId">Delete</a>
                </td>
            </tr>
        }
        
        @foreach (Sport sport in @Model)
        {
            <li>@Html.ActionLink(sport.SportName, "Players", new { id = sport.SportId }, null)</li>
        }

    </tbody>
</table>
